{
  "family": "aurray-bot-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::588412562130:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::588412562130:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "bot_production",
      "image": "588412562130.dkr.ecr.us-east-1.amazonaws.com/aurray_bot:production-latest",
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "HEADLESS",
          "value": "true"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aurray_bot_production",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        },
        {
          "name": "nproc",
          "softLimit": 32768,
          "hardLimit": 32768
        }
      ]
    }
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Service",
      "value": "aurray-bot-production"
    },
    {
      "key": "ManagedBy",
      "value": "terraform"
    }
  ]
}

