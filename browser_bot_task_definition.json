{
  "family": "clerk-browser-bot",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "browser-bot",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/browser_bot:${IMAGE_TAG:-v1.0.0}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "MEETING_URL",
          "value": "${MEETING_URL}"
        },
        {
          "name": "BOT_NAME",
          "value": "${BOT_NAME:-Aurray Bot}"
        },
        {
          "name": "PLATFORM",
          "value": "${PLATFORM:-teams}"
        },
        {
          "name": "RT_GATEWAY_URL",
          "value": "${RT_GATEWAY_URL:-wss://api.auray.net}"
        },
        {
          "name": "API_BASE_URL",
          "value": "${API_BASE_URL:-https://api.auray.net}"
        },
        {
          "name": "MEETING_ID",
          "value": "${MEETING_ID}"
        },
        {
          "name": "SESSION_ID",
          "value": "${SESSION_ID}"
        },
        {
          "name": "JOIN_TIMEOUT_SEC",
          "value": "${JOIN_TIMEOUT_SEC:-60}"
        },
        {
          "name": "AUDIO_SAMPLE_RATE",
          "value": "${AUDIO_SAMPLE_RATE:-16000}"
        },
        {
          "name": "AUDIO_CHANNELS",
          "value": "${AUDIO_CHANNELS:-1}"
        },
        {
          "name": "LOG_LEVEL",
          "value": "${LOG_LEVEL:-info}"
        }
      ],
      "secrets": [
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:clerk/aws-credentials:access_key_id::"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:clerk/aws-credentials:secret_access_key::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/clerk-browser-bot",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node healthcheck.js || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 40
      },
      "linuxParameters": {
        "initProcessEnabled": true,
        "sharedMemorySize": 2147483648,
        "tmpfs": [
          {
            "containerPath": "/tmp",
            "size": 1073741824
          },
          {
            "containerPath": "/dev/shm",
            "size": 2147483648
          }
        ]
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        },
        {
          "name": "nproc",
          "softLimit": 32768,
          "hardLimit": 32768
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "tmp",
          "containerPath": "/tmp",
          "readOnly": false
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "tmp",
      "host": {
        "sourcePath": "/tmp"
      }
    }
  ],
  "placementConstraints": [
    {
      "type": "memberOf",
      "expression": "attribute:ecs.instance-type =~ t3.*"
    }
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Service",
      "value": "clerk-browser-bot"
    },
    {
      "key": "ManagedBy",
      "value": "terraform"
    }
  ]
}
